<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
    <p><%= link_to "Edit", edit_task_path(task) %></p></li>
    <% if task.completed %>
      <span>OUI</span>
    <% elsif %>
      <span>NON</span>
    <% end %>
  <% end %>
</ul>
<p><%= link_to "Create a task", new_task_path%></p>

